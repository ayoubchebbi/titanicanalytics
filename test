/* myDataTable.css */
.custom-datatable .slds-table tbody tr:hover th,
.custom-datatable .slds-table tbody tr:hover td {
    color: yourDesiredColor !important; /* Replace with your desired text color */
}
// myDataTable.js
import { LightningElement, wire, api } from 'lwc';
import getRecords from '@salesforce/apex/YourApexController.getRecords';

export default class MyDataTable extends LightningElement {
    @api recordId;
    data = [];
    columns = [
        { label: 'Name', fieldName: 'name' },
        { label: 'Status', fieldName: 'status' },
        // Add other columns as needed
    ];

    @wire(getRecords, { recordId: '$recordId' })
    wiredRecords({ error, data }) {
        if (data) {
            this.data = data;
            this.processData();
        } else if (error) {
            console.error('Error fetching records', error);
        }
    }

    processData() {
        // Add a CSS class based on status
        this.data = this.data.map(item => {
            return {
                ...item,
                rowClass: this.getRowClass(item.status)
            };
        });
    }

    getRowClass(status) {
        switch(status) {
            case 'Open':
                return 'slds-is-selected';
            case 'Closed':
                return 'closed-row';
            case 'Pending':
                return 'pending-row';
            default:
                return '';
        }
    }
}

<!-- myDataTable.html -->
<template>
    <div class="slds-card">
        <lightning-datatable
            key-field="id"
            data={data}
            columns={columns}
            class="my-datatable"
        ></lightning-datatable>
    </div>
</template>
