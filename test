<apex:page controller="TerritoryController">
    <h2>Select a Territory</h2>

    <!-- Check if the list is not empty -->
    <apex:outputPanel rendered="{!NOT(ISNULL(serviceTerritorItems))}">
        <!-- apex:selectList to create a dropdown -->
        <apex:form>
            <apex:selectList value="{!selectedTerritoryValue}" size="1">
                <apex:selectOptions value="{!serviceTerritorItems}" itemValue="value" itemLabel="label"/>
            </apex:selectList>
            <apex:commandButton value="Submit" action="{!saveSelectedTerritory}" rerender="outputPanel"/>
        </apex:form>
    </apex:outputPanel>

    <!-- If the list is empty, show this message -->
    <apex:outputPanel rendered="{!ISNULL(serviceTerritorItems)}">
        <p>No items available</p>
    </apex:outputPanel>

    <apex:outputPanel id="outputPanel">
        <h3>You selected: {!selectedTerritoryValue}</h3>
    </apex:outputPanel>

</apex:page>
