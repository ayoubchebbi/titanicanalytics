public static List<EventWrapper> sortEventsByType(List<EventWrapper> events) {
    events.sort(new Comparator<EventWrapper> {
        public Integer compare(EventWrapper a, EventWrapper b) {
            // 1 doit venir avant -1, donc tri décroissant
            return b.type.compareTo(a.type);
        }
    });
    return events;
}

List<EventWrapper> events = new List<EventWrapper>{
    new EventWrapper(-1, 'E1'),
    new EventWrapper(1, 'E2'),
    new EventWrapper(1, 'E3'),
    new EventWrapper(-1, 'E4')
};

List<EventWrapper> sortedEvents = sortEventsByType(events);
// Résultat : E2, E3, E1, E4
