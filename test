SELECT Id, Name, JobType, JobItemsProcessed, TotalJobItems, Status, 
       CreatedBy.Name, CreatedDate, LastProcessed, NextFireTime, 
       CronTrigger.Name, CronTrigger.CronExpression, ApexClass.Name 
FROM AsyncApexJob 
WHERE JobType = 'ScheduledApex'



SELECT Id, CronExpression, NextFireTime, State, CronJobDetail.ApexClass.Name 
FROM CronTrigger
WHERE CronJobDetail.ApexClass.Name = 'MyScheduledJobClass'
