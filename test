// Ajoutez cette m√©thode dans connectedCallback() comme fallback
connectedCallback() {
    // Si CurrentPageReference ne fonctionne pas, utilisez window.location
    if (!this.saId) {
        const urlParams = new URLSearchParams(window.location.search);
        this.saId = urlParams.get('saId');
        
        if (this.saId) {
            this.handleSaIdFromUrl();
        }
    }
}
