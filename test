<div class="dropdown-container">
  <button id="dropdownButton" class="dropdown-btn">Menu</button>
  <div id="dropdownContent" class="dropdown-content">
    <label><input type="checkbox"> Option 1</label><br>
    <label><input type="checkbox"> Option 2</label><br>
    <label><input type="checkbox"> Option 3</label><br>
  </div>
</div>

<style>
.dropdown-container {
  position: relative;
}

.dropdown-btn {
  cursor: pointer;
}

.dropdown-content {
  position: absolute;
  top: 100%;
  left: 0;
  display: none; /* Hidden by default */
  background-color: white;
  border: 1px solid #ccc;
  padding: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.dropdown-content.active {
  display: block; /* Show when active */
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const dropdownButton = document.getElementById('dropdownButton');
  const dropdownContent = document.getElementById('dropdownContent');

  // Toggle dropdown visibility when button is clicked
  dropdownButton.addEventListener('click', (e) => {
    e.stopPropagation(); // Prevent click from closing dropdown
    dropdownContent.classList.toggle('active');
  });

  // Prevent closing when clicking inside the dropdown
  dropdownContent.addEventListener('click', (e) => {
    e.stopPropagation(); // Prevent the dropdown from closing
  });

  // Close the dropdown when clicking anywhere else on the page
  document.addEventListener('click', () => {
    dropdownContent.classList.remove('active');
  });
});
</script>
