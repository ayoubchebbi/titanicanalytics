handleCheckboxChange(event) {
    const value = this.item.value; // or whatever identifies the item
    const checked = event.target.checked;

    const customEvent = new CustomEvent('changestatusvalue', {
        detail: { value, checked }
    });

    this.dispatchEvent(customEvent);
}


handleChangeStatusValue(event) {
    const { value, checked } = event.detail;

    if (checked) {
        this.signatureQuestionnaireList.push(value);
    } else {
        this.signatureQuestionnaireList = this.signatureQuestionnaireList.filter(item => item !== value);
    }
}
