<!-- searchField.html -->
<template>
    <lightning-input label="Recherche" onchange={handleChange} onblur={handleSearch}></lightning-input>
</template>


// searchField.js
import { LightningElement } from 'lwc';

export default class SearchField extends LightningElement {
    timeout;

    handleInput(event) {
        const value = event.target.value;

        // Effacer le précédent timeout si l'utilisateur continue à écrire
        clearTimeout(this.timeout);

        // Lancer la fonction après 500ms sans saisie
        this.timeout = setTimeout(() => {
            console.log('Recherche après saisie terminée : ', value);
            // Appeler ici ton traitement ou un event
        }, 500);
    }
}
