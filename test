<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://lightningdesignsystem.com/assets/styles/slds.min.css">
  <title>SLDS Block Example with JS</title>
  <style>
    .custom-block {
      display: flex;
      align-items: center;
      border: 2px solid red;
      padding: 10px;
      width: 300px;
    }
    .name {
      margin-left: 10px;
      font-size: 16px;
    }
    .slds-box {
      width: 40px;
      height: 40px;
    }
  </style>
</head>
<body>

  <div id="container"></div>

  <script>
    // Function to create the block with the name and red box
    function createBlock(name) {
      // Create the custom block container
      const block = document.createElement('div');
      block.className = 'custom-block';

      // Create the red box
      const redBox = document.createElement('div');
      redBox.className = 'slds-box';

      // Create the name element
      const nameElement = document.createElement('div');
      nameElement.className = 'name';
      nameElement.innerText = name;

      // Append the red box and name to the block
      block.appendChild(redBox);
      block.appendChild(nameElement);

      // Append the block to the container
      document.getElementById('container').appendChild(block);
    }

    // Call the function to create the block with a name
    createBlock('John Doe');
  </script>

</body>
</html>
