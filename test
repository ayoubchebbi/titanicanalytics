public static Map<String, String> getFrequencyFromApiName(String apiName) {
        Map<String, String> result = new Map<String, String>();
        
        if (String.isBlank(apiName)) {
            return result;
        }
        
        switch on apiName {
            when '001' {  // 2 times a week
                result.put('number', '2');
                result.put('unit', 'Week');
            }
            when '002' {  // Every Week
                result.put('number', '1');
                result.put('unit', 'Week');
            }
            when '003' {  // Every 2 Weeks
                result.put('number', '2');
                result.put('unit', 'Week');
            }
            when '004' {  // Every 3 Weeks
                result.put('number', '3');
                result.put('unit', 'Week');
            }
            when '005' {  // Every 4 Weeks
                result.put('number', '4');
                result.put('unit', 'Week');
            }
            when '006' {  // 3 times a week
                result.put('number', '3');
                result.put('unit', 'Week');
            }
            when '007' {  // 4 times a week
                result.put('number', '4');
                result.put('unit', 'Week');
            }
            when '008' {  // 5 times a week
                result.put('number', '5');
                result.put('unit', 'Week');
            }
            when '009' {  // 6 times a week
                result.put('number', '6');
                result.put('unit', 'Week');
            }
            when '010' {  // Everyday
                result.put('number', '1');
                result.put('unit', 'Day');
            }
            when '011' {  // Every 2 Month
                result.put('number', '2');
                result.put('unit', 'Month');
            }
            when '012' {  // Every 3 Month
                result.put('number', '3');
                result.put('unit', 'Month');
            }
            when '013' {  // Every 5 Weeks
                result.put('number', '5');
                result.put('unit', 'Week');
            }
            when '014' {  // Every 6 Weeks
                result.put('number', '6');
                result.put('unit', 'Week');
            }
            when else {
                result.put('number', '');
                result.put('unit', '');
            }
        }
        
        return result;
    }
}
