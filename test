<apex:page controller="VfPageController">
    <apex:form>
        <apex:pageBlock title="Select an Option">
            <apex:selectList value="{!selectedValue}" size="1" id="vfCombobox" onchange="handleChange(this.value)">
                <apex:selectOptions value="{!options}"/>
                <apex:selectOption itemLabel="Yes" itemValue="Yes"/>
                <apex:selectOption itemLabel="No" itemValue="No"/>
            </apex:selectList>
        </apex:pageBlock>
    </apex:form>

    <script>
        function handleChange(value) {
            Visualforce.remoting.Manager.invokeAction(
                '{!$RemoteAction.VfPageController.executeMethod}',
                value,
                function(result, event) {
                    if (event.status) {
                        console.log('Selected:', value);
                    } else {
                        console.error('Error calling Apex method.');
                    }
                },
                { escape: false }
            );
        }
    </script>
</apex:page>
